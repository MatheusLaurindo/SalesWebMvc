@model IEnumerable<SalesWebMvc.Models.Seller>;
@{
    ViewData["Title"] = "Sellers";
}

<h2>@ViewData["title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Add new seller</a>
</p>

<table class="table table-hover table-striped">
    <thead>
        <tr class="bg-info" style="color: #fff;">
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BirthDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BaseSalary)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BirthDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BaseSalary)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn-sm btn-primary" style="text-decoration: none; border-radius: 2px">Edit</a> 
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn-sm btn-primary" style="text-decoration: none; border-radius: 2px">Details</a> 
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn-sm btn-danger" style="text-decoration: none; border-radius: 2px">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
