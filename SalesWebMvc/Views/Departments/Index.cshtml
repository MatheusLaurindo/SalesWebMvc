@model IEnumerable<SalesWebMvc.Models.Department>

@{
    ViewData["Title"] = "Departments";
}

<h2>Departments</h2>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New Department</a>
</p>
<table class="table table-hover table-striped">
    <thead>
        <tr class="bg-info" style="color: #fff;">
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn-sm btn-primary btn-xs" style="text-decoration: none; border-radius: 2px">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn-sm btn-primary btn-xs" style="text-decoration: none; border-radius: 2px">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn-sm btn-danger btn-xs" style="text-decoration: none; border-radius: 2px">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
